<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="#ffffffff">

    <LinearLayout
        android:id="@+id/item_bus_station_contents_linear_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_businfo_contents_img_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_directions_bus_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_businfo_contents_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bus name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/item_businfo_contents_txt_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bus information1" />
            <TextView
                android:id="@+id/item_businfo_contents_txt_arrival2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bus information2" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
