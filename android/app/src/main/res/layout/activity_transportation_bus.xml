<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transportation_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context="com.iotaddon.goout.ActivityTransportationBus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#33b5e5"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:id="@+id/activity_transportation_bus_tab"
            android:background="#ffffffff">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_transportation_bus_pager"
            android:background="#ffffffff">


        </android.support.v4.view.ViewPager>

    </LinearLayout>



</RelativeLayout>
